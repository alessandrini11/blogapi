{% extends 'adminbase.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="w-11/12 mx-auto">
        <h1 class="text-2xl">Article Managed with Symfony</h1>
        <p class="text-right text-green-800 text-xl cursor-pointer"><a href="{{ path('article_new') }}"><i class="fas fa-plus "></i> add post</a></p>

        <table class="w-full">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr class="text-center">
                    <td>{{ article.id }}</td>
                    <td class="text-left">{{ article.title }}</td>
                    <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>

                    <td>
                        <div class="flex justify-center ">
                            <a href="{{ path('article_show', {'id': article.id}) }}"><i class="fa fa-eye hover:text-yellow-300"></i></a>
                            <a class="mx-2 md:mx-5" href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-pencil-alt hover:text-green-500"></i></a>
                            {{ include('article/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
